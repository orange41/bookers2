<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <img src="<%= @user.profile_image.present? ? url_for(@user.profile_image) : asset_path('no_image.jpg') %>" style="width: 100px; height: 100px;" />
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <% if @user == current_user %>
          <div class="row">
            <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(@user) %>">
              Edit Profile
            </a>
          </div>
        <% end %>
        <h2 class="mt-3">New book</h2>
        <form action="/books" accept-charset="UTF-8" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <div class="form-group">
            <label for="book_title">Title</label>
            <input class="form-control book_title" type="text" name="book[title]" id="book_title">
          </div>
          <div class="form-group">
            <label for="book_body">Opinion</label>
            <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          </div>
        </form>
      </div>
      <!-- 親要素B -->
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <% if @book.user.profile_image.attached? %>
                  <a href="<%= user_path(@book.user) %>">
                    <img src="<%= url_for(@book.user.profile_image) %>" style="width: 100px; height: 100px;" />
                    <br>
                    <%= @book.user.name %>
                  </a>
                <% else %>
                  <img src="<%= asset_path('no_image.jpg') %>" style="width: 100px; height: 100px;" />
                  <br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
                <td>
                  <a class="btn btn-sm btn-success edit_book_<%= @book.id %>" href="<%= edit_book_path(@book) %>">Edit</a>
                </td>
                <td>
                  <a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_<%= @book.id %>" rel="nofollow" data-method="delete" href="<%= book_path(@book) %>">Destroy</a>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
